<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TapoMobileApp.MainPage">

    <StackLayout>
        <Button Text="Privacy On" x:Name="ButtonOn" />
        <Button Text="Privacy Off" x:Name="ButtonOff" />
        <Button Text="Check" x:Name="ButtonCheck" />
        <Button Text="Clear" x:Name="ButtonClear" />
        <Label Text="Ports:" FontSize="Title" Padding="30,10,30,10" />
        <Entry x:Name="_ports" Placeholder="PortNumbers" />
        <Button Text="Scan" x:Name="Scan" />
        <StackLayout x:Name="CameraOutput" Padding="30,10,30,10">

        </StackLayout>
        <Label x:Name="StatusMessage" LineBreakMode="WordWrap" Padding="30,10,30,10" FontSize="Title" />
        <Label x:Name="LogMessage" LineBreakMode="WordWrap" Padding="30,10,30,10" FontSize="Title" />
    </StackLayout>

</ContentPage>