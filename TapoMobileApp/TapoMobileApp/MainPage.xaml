<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TapoMobileApp.MainPage">

    <StackLayout>
        <Button Text="Privacy On" x:Name="ButtonOn"  />
        <Button Text="Privacy Off" x:Name="ButtonOff" />
        <Label Text="Ports:" FontSize=
               "Title" Padding="30,10,30,10"/>
        <Entry x:Name="_ports" Placeholder="PortNumbers" TextChanged="_ports_TextChanged" />
        <Button Text="Scan" x:Name="Scan" />
    </StackLayout>

</ContentPage>
